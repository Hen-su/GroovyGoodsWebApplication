@model IEnumerable<GroovyGoodsWebApplication.Models.SupplierProduct>

@{
    ViewData["Title"] = "Index";
}
<br>
<h1>Supplied Products</h1>
<br>
<p>
    <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Create")'">Create New</button>
</p>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.PidNavigation.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SidNavigation.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.PidNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SidNavigation.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Spid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Spid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Spid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
